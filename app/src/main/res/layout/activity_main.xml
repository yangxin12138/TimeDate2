<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?background_color"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_marginTop="@dimen/universal_title_marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/universal_title_iv_width"
            android:layout_height="@dimen/universal_title_iv_height"
            android:src="?arrowBack_src"
            android:layout_marginStart="@dimen/universal_title_iv_marginStart"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:text="@string/str_timeanddate"
            android:textColor="?textColor"
            android:textSize="@dimen/universal_title_tv_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/universal_title_tv_marginStart"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/universal_content_LL_paddingStart"
        android:paddingTop="@dimen/universal_content_LL_paddingTop"
        android:paddingEnd="@dimen/universal_content_LL_paddingEnd"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/LL_TimeSwitch"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_time_LL_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="?bBg"
            android:paddingStart="50dp">

            <TextView
                android:id="@+id/time_switch"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:text="@string/time_usenettime"
                android:textColor="?textColor"
                android:textSize="30sp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingEnd="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:background="@null"
                android:thumb="?switch_thumb"
                app:track="?switch_track" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_Time"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_time_LL_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="?bBg"
            android:paddingStart="50dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/time_title"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textColor="?textColor"
                android:text="@string/time_settime"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/time_summary"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="08:00 AM"
                android:textSize="30sp"
                android:textColor="@color/index_summary" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL_Date"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_time_LL_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="?bBg"
            android:paddingStart="50dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/date_title"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textColor="?textColor"
                android:text="@string/time_setdate"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/date_summary"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="1997/01/01"
                android:textSize="25sp"
                android:textColor="@color/index_summary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_is24Hours"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_time_LL_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="?bBg"
            android:paddingStart="50dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/is24Hours_switch_title"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textColor="?textColor"
                android:text="@string/time_use24hours"
                android:duplicateParentState="true"
                android:textSize="30sp"
                android:gravity="center_vertical"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_24Hours"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingEnd="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:background="@null"
                android:thumb="?switch_thumb"
                app:track="?switch_track" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_TImeZone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_time_LL_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="?bBg"
            android:paddingStart="50dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/timeZone_title"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textColor="?textColor"
                android:text="@string/time_settimezone"
                android:duplicateParentState="true"
                android:textSize="30sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/timeZone_summary"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/index_timezone_summary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>